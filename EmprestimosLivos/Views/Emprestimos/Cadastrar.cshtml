@model EmprestimosModel
@{
    ViewData["title"] = "Cadastrar Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">

    <div>
        <h1 class="text-light">Cadastro de Empréstimos</h1>
    </div>

    <form method="post" asp-controller="Emprestimos" asp-action="Cadastrar">        

        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está emprestando o livro.">

        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está Recebendo o livro.">

        </div>
        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="LivroEmprestado" placeholder="Qual o livro a ser emprestado.">

        </div>

        <div class="d-flex gap-5 mt-5">
            <button type ="submit" class="btn btn-outline-success w-50">Cadastrar</button>
            <a class="btn btn-outline-primary w-50" asp-controller="Emprestimos" asp-action="Index">Voltar</a>            
        </div>

    </form>

</div>